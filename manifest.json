{
  "manifest_version": 3,
  "name": "Solanam Image Processor",
  "version": "1.0.0",
  "description": "Professional image processing tool from the Solanam ecosystem",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "notifications"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Solanam Image Processor"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}